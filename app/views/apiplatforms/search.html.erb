  <div class="container">
    <div class="row mt-5">
      <div class="col-lg-6">
        <h4>Game info</h4>
          <tbody>
            <% if @results.any? %>
            <div>
              <% @results.each do |game| %>
              <% game.inspect %>
                <%= game["id"] %>
                <%= game["name"] %>
                <%= game["released"] %>
                <%= game["background_image"] %>
                <%= game["metacritic"] %>
              <% end %>
              <% else %>
                <p>No results</p>
              <% end %>
            </div>
          </tbody>
        </dl>
      </div>
  
    </div>
  </div>