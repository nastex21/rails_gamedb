<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Release Date</th>
            <th scope="col">Platform(s)</th>
            <th scope="col">Store(s)</th>
        </tr>
    </thead>
    <tbody>
    <% @results.each do |item| %>
                <tr>
                    <td>
                        <%= image_tag(item["background_image"], size: "50x50" , alt:"Screenshot of video game") %>
                    </td>
                    <td>
                        <%= item["name"] %>
                    </td>
                    <td>
                        <%= item["released"] %>
                    </td>
                    <td>
                            <% len = item["platforms"].length %>
                            <% if len == 1 %>
                                <%= item["platforms"][0]["platform"]["name"] %>
                            <% elsif len > 1 %>
                                <select>
                                <% item["platforms"].each do |systems| %>
                                    <option>
                                        <%= systems["platform"]["name"] %>
                                    </option>
                                <% end %>
                                </select>
                            <% else %>
                                <%= null %>
                            <% end %>
                    </td>
       
                    <td>
                        <% unless item["stores"].blank?%>
                            <% len = item["stores"].length %>
                            <% if len == 1 %>
                                <%= item["stores"][0]["store"]["name"] %>
                            <% elsif len > 1 %>
                                <select>
                                <% item["stores"].each do |store| %>
                                    <option>
                                        <%= store["store"]["name"] %>
                                    </option>
                                <% end %>
                                </select>
                            <% end %>
                        <% end %>
                    </td>
                </tr>
<% end %>
</tbody>
</table>