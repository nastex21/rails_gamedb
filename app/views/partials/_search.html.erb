<%= javascript_pack_tag 'get_games' %>

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-5">

            <% if flash[:alert] %>
                <div class="alert alert-warning">
                    <%= flash[:alert] %>
                </div>
                <% end %>
                
                <div class="mx-auto mt-5" style="width: 400px">
                    <%= form_with url: root_path, method: 'get', remote: true, id: 'search_games' do |f| %>
                        <div class="form-group">
                            <%= f.label :game, 'Search for a game' %>
                            <%= f.text_field :game %>

                            <%= f.submit 'Submit', :id => "get_games_button" %>
                        </div>
                     <% end %>              
                </div>

            </div>
        </div>
    </div>
       